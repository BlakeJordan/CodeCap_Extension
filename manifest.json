{
    "manifest_version": 2,
    "name": "Code Cap. Great Job!",
    "version": "0.1",
    "description": "An OCR tool used to capture code from pictures or videos in Chrome.",

    "page_action": {
        "default_title": "CodeCap",
        "default_icon": "camera_icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [ "<all_urls>" ],
            "js": [ "scripts/aws-sdk.min.js", "scripts/content.js" ]
        }
    ],
    "permissions": [
        "activeTab",
        "declarativeContent",
        "clipboardWrite"
      ],
    "background": {
        "scripts": [ "scripts/background.js" ]
      }
}