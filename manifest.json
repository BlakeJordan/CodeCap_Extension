{
    "manifest_version": 2,
    "name": "CodeCap",
    "version": "0.1",
    "description": "An OCR tool used to capture code from pictures or videos in Chrome.",
    


    "permissions": [
        "tabs",
        "http://*/",
        "https://*/",     
        "clipboardWrite",
        "notifications",
        "storage",
        "activeTab"
    ],

    "browser_action": {
        "default_title": "CodeCap",
        "default_icon": "media/codecap_logo.png",
        "default_popup": "html/popup-initial.html"
    },

    "web_accessible_resources": [
        "/media/Jcrop.gif",
        "/media/pixel.png"
      ],

    "content_scripts": [
        {
            "matches": [ "<all_urls>" ],
            "js": [ "scripts/file-uploader.js", "scripts/screen-shotter.js",
                    "scripts/aws-sdk.min.js", "scripts/ocr-lambda-handler.js" ]
        }
    ],

    "background": {
        "scripts": [ "scripts/background.js" ]
      }
}